var Games = ["1. Halo 4","2. League of Legends","3. Destiny","4. Super Smash Brothers Wii U","5. Pok√©mon Omega Ruby","6. Dungeon Defenders", "7. Everquest 2", "8. World of Warfraft", "9. Diablo 3", "10. Naruto-Arena"];

var i = 1; //variable to control the listed game
	var IncrementList = function(){
			i += 1;
			console.log(i);
			gamelist.text=Games[i];
};
	var DecrementList = function(){
			i -= 1;
			console.log(i);
			gamelist.text=Games[i];
			if(i = -1){
				i=9;
};
};

var gamelist = Ti.UI.createLabel({
	text: Games[i],
});

//Stop code from going lower then 0

if(i = -1){
	i=9;
};


//Event Listeners

NextButton.addEventListener("click", IncrementList);
PreviousButton.addEventListener("click", DecrementList);

//display
FirstView.add(gamelist);
