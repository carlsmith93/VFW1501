//App Startfile

Ti.UI.setBackgroundColor("#000");

//Window Creation
var FirstWindow = Ti.UI.createWindow({
	backgroundColor: "#000" //color black
});

//View Creation

var FirstView = Ti.UI.createView({
	backgroundColor: "white",
	bottom: 20,
	right: 20,
	left: 20,
	height: 280,
	borderRadius: 12
});

var SecondView = Ti.UI.createView({
	backgroundColor: "white",
	height: Ti.UI.SIZE
});
FirstWindow.open();
FirstWindow.add(FirstView , SecondView);
